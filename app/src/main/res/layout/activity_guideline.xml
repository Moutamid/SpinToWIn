<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuidelineActivity"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tc_img"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Follow All The Rules Below:"
        android:layout_marginTop="10dp"
        android:paddingStart="8dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/black"
        android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Before starting app, make sure you have an active internet connection."
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/baseline_flare_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Share app to 5 Whatsapp/Facebook groups."
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/baseline_flare_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="Please do give 5 star rating to the app."
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/baseline_flare_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="You must play on the app daily."
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/baseline_flare_24" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="It is mandatory to be active on app for 30 minutes daily."
        android:drawablePadding="8dp"
        app:drawableLeftCompat="@drawable/baseline_flare_24" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/startBtn"
        android:onClick="startBtnClick"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Start Earning"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>