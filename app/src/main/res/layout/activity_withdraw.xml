<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WithdrawActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster_two"
            android:gravity="center"
            android:text="Withdraw Amount"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="right"
        android:background="@drawable/transparent_bg"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Total Coins"
            android:fontFamily="@font/roboto"
            android:paddingStart="8dp"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingBottom="2dp"
            android:paddingEnd="2dp"
            android:src="@drawable/coinimg" />

        <TextView
            android:id="@+id/myTotal"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingEnd="8dp"
            android:text="56"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Redeem Amount : "
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/minRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50000"
        android:paddingStart="5dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/conversionAmnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:text="Points = 1 Rs"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/transparent_bg"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Options"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <CheckBox
            android:id="@+id/razorPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RazorPay"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

        <CheckBox
            android:id="@+id/manualPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual Payment"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:background="@drawable/transparent_bg"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:layout_marginTop="10dp"
            android:paddingStart="8dp"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <EditText
            android:id="@+id/mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:hint="Payment Number"
            android:drawableLeft="@drawable/baseline_contact_phone_24"
            android:drawablePadding="10dp"
            android:paddingStart="10dp"/>

        <EditText
            android:id="@+id/withdrawAmnt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/text_border"
            android:hint="Amount To Withdraw"
            android:drawableLeft="@drawable/baseline_monetization_on_24"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"/>

        <Button
            android:id="@+id/withdrawSubmitBtn"
            android:onClick="withdrawSubmitBtnClick"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Submit"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textSize="16sp"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>